<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>com.luxsoft.siipapwin</groupId>
		<artifactId>siipapwin</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>	
	<groupId>com.luxsoft.siipapwin</groupId>
	<artifactId>swing</artifactId>
	<packaging>jar</packaging>

	<name>SiipapWin Swing Framework</name>
	
	<description>
		Framework base para la interfaz SWING de todos los modulos de SiipapWin
	</description> 
	
	<inceptionYear>2006</inceptionYear>

	<dependencies>	
		<dependency>
			<groupId>jmock</groupId>
			<artifactId>jmock</artifactId>
		</dependency>
<!-- 
		<dependency>
			<groupId>jfreechart</groupId>
			<artifactId>jfreechart</artifactId>
			<version>1.0.0</version>
		</dependency>
 -->
		<dependency>
			<groupId>org.swinglabs</groupId>
			<artifactId>swingx</artifactId>
			<version>2007.08.05</version>
		</dependency>

		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>looks</artifactId>
			<version>2.1.2</version>
		</dependency>

		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>forms</artifactId>
			<version>1.0.7</version>
		</dependency>

		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>binding</artifactId>
			<version>1.4.0</version>
		</dependency>
		
		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>validation</artifactId>
			<version>1.4.0</version>
		</dependency>
<!-- 
		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>animation</artifactId>
			<version>1.2.0</version>
		</dependency>
 -->
		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>uif</artifactId>
			<version>1.4.1</version>
		</dependency>

		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>uif-extras</artifactId>
			<version>1.4.1</version>
		</dependency>

		

		<dependency>
			<groupId>net.infonode</groupId>
			<artifactId>idw-gpl</artifactId>
			<version>1.5.0</version>
		</dependency>		

		<dependency>
			<groupId>jasperreports</groupId>
			<artifactId>jasperreports</artifactId>
			<version>1.3.1</version>
		</dependency>		

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<optional>true</optional> 
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.luxsoft.siipapwin</groupId>
			<artifactId>images</artifactId>
		</dependency>
		<dependency>
			<groupId>com.luxsoft.siipapwin</groupId>
			<artifactId>model</artifactId>
		</dependency>

	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<configuration>
					<programs>
						<program>
							<mainClass>
								com.luxsoft.siipap.swing.demo.SXDemoView
							</mainClass>
							<name>SiipapWin</name>
						</program>						
					</programs>
				</configuration>
			</plugin>			
		</plugins>
		
		<resources>
			<resource>
        		<directory>src/main/resources</directory>
        		<filtering>false</filtering>
      		</resource>      		
			<resource>
        		<directory>src/test/resources</directory>
        		<filtering>true</filtering>
      		</resource>      		      		
    	</resources>
    	
	</build>

</project>
