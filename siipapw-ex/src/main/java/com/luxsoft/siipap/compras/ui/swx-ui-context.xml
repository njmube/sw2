<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:p="http://www.springframework.org/schema/p"
       	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       	xmlns:util="http://www.springframework.org/schema/util"
       	xmlns:context="http://www.springframework.org/schema/context"
       	xsi:schemaLocation="
			http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/util 
			http://www.springframework.org/schema/util/spring-util-2.5.xsd
			http://www.springframework.org/schema/context 
			http://www.springframework.org/schema/context/spring-context-2.5.xsd"
		default-lazy-init="false"
		>  
       
    <description>
    	Contexto para la UI del modulo de compras
    </description> 
    
    
    <!-- Compras -->
    <bean id="compras.analisisView" class="com.luxsoft.siipap.swing.views2.AbstractTaskView"
    	p:procesosTasksVisible="false"
    	p:consultasLabel="Analisis"
    	p:resizeWeightForView=".08">
    </bean>
    
  
    
    <!-- Compras OLD-->
    
    <bean id="productosPanel" class="com.luxsoft.siipap.compras.ui.ProductosPanel"/>
    
    <bean id="productosView" class="com.luxsoft.siipap.compras.ui.ProductosView"
    	parent="abstractView">
    	<property name="productosPanel" ref="productosPanel"/>
    </bean>
     
     <bean id="comprasView" class="com.luxsoft.siipap.swing.views2.AbstractTaskView"
     	p:resizeWeightForView=".2">
     	<property name="panels">
     		<list>
     			<bean class="com.luxsoft.siipap.compras.ui.consultas.ComprasCentralizadasPanel">
     				<property name="defaultPanel" value="true"/>
     			</bean>
     			<bean class="com.luxsoft.siipap.compras.ui.consultas.RecepcionDeComprasCentralizadasPanel"/>
     			<bean class="com.luxsoft.siipap.compras.ui.consultas.AlcancesPanel">
     			</bean>
     			<bean class="com.luxsoft.siipap.compras.ui.consultas.AlcanceImportacionPanel"/>
     			<bean class="com.luxsoft.siipap.inventario.ui.consultas.DisponibilidadPanel"/>
     		</list>
     	</property>
     </bean>
     
     <bean id="compras.listaDePreciosView" class="com.luxsoft.siipap.compras.ui.ListaDePreciosView"
     	parent="abstractView">
     	<property name="listaDePreciosPanel" ref="listaDePreciosPanel"/>     
     </bean> 
     
     <bean id="listaDePreciosPanel" class="com.luxsoft.siipap.compras.ui.ListaDePreciosPanel">
     </bean>
     
     
    
</beans>